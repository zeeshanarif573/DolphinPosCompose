<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- background fill (transparent) -->
    <solid android:color="@color/bgColorEditText" />

    <!-- outline stroke -->
    <stroke
        android:width="1dp"
        android:color="@color/borderOutline" />

    <!-- rounded corners -->
    <corners android:radius="5dp" />

    <!-- optional padding so inner content doesn't touch the border -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>