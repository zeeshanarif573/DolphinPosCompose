    <style name="Widget.Button.Base" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textSize">@dimen/text_heading_small</item>
        <item name="android:fontFamily">@font/general_sans_medium</item>
        <item name="font">@font/general_sans_medium</item>
        <item name="fontFamily">@font/general_sans_medium</item>
        <item name="android:font">@font/general_sans_medium</item>
        <item name="android:paddingVertical">@dimen/space_8</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.Button.Primary" parent="Widget.Button.Base">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.Button.Success" parent="Widget.Button.Base">
        <item name="backgroundTint">@color/green_success</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.Button.Error" parent="Widget.Button.Base">
        <item name="backgroundTint">@color/red_error</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.Button.Warning" parent="Widget.Button.Base">
        <item name="backgroundTint">@color/dark_blue</item>
